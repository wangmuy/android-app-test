<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myviews="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="#777777"
    tools:context="com.example.test.MainActivity">
    <ImageView android:id="@+id/emptyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        android:src="@drawable/empty_recents" />
    <com.example.test.RecyclerViewEx
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recyclerview_height"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:clipChildren="false"
        myviews:emptyView="@id/emptyview" />
    <Button android:id="@+id/removeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="25dp"
        android:background="@drawable/item_image_bg"
        android:text="Close" />
</FrameLayout>
